@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="error-page">
        <h2 class="headline text-yellow"> 404</h2>
        <div class="error-content">
            <h3><i class="fa fa-warning text-yellow"></i> Oops! Página no encontrada.</h3>
            <p>
                No pudimos encontrar la página que estabas buscando.
                Mientras tanto, puedes <a href="@Url.Action("Index", "Home")">volver a página principal</a> o intenta usar el formulario de búsqueda.
            </p>
            <form class="search-form">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Buscar">
                    <div class="input-group-btn">
                        <button type="submit" name="submit" class="btn btn-warning btn-flat">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
