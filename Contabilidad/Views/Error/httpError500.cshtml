@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="error-page">
        <h2 class="headline text-red">500</h2>
        <div class="error-content">
            <h3><i class="fa fa-warning text-red"></i> Oops! Algo salió mal.</h3>
            <p>
                Trabajaremos para solucionarlo de inmediato.
                Mientras tanto, puedes <a href="@Url.Action("Index", "Home")">volver a página principal</a> o intenta usar el formulario de búsqueda.
            </p>
            <form class="search-form">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Buscar">
                    <div class="input-group-btn">
                        <button type="submit" name="submit" class="btn btn-danger btn-flat">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
