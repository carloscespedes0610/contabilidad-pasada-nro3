@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>Mensaje de Error</h2>*@
@*<h3 class="text-danger">@MvcHtmlString.Create(ViewBag.MessageErr.Replace(Environment.NewLine, "<br />"))</h3>*@

<section class="content">
    <div class="error-page">
        <h2 class="headline text-yellow"> INF</h2>
        <div class="error-content">
            <h3><i class="fa fa-warning text-yellow"></i> Ocurrió un error.</h3>
            <p>
                @MvcHtmlString.Create(ViewBag.MessageErr.Replace(Environment.NewLine, "<br />")).
            </p>
            <p>
                Puedes <a href="@Url.Action("Index", "Home")">volver a página principal</a> o intenta usar el formulario de búsqueda.
            </p>
            <form class="search-form">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Buscar">
                    <div class="input-group-btn">
                        <button type="submit" name="submit" class="btn btn-warning btn-flat">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
